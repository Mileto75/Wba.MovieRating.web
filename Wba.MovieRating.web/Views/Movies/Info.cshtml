@model MoviesInfoViewModel

<div class="row">
    <div class="col col-lg-3 mx-auto">
        <div class="card text-center" style="width: 18rem;">
            <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
            <img src="/images/@Model.Image" class="card-img-top" alt="@Model.Value">
            <div class="card-body">
                <h5 class="card-title">@Model.Value</h5>
                <h6 class="card-subtitle mb-2">Company</h6>
                <a asp-controller="Companies" asp-action="Movies"
                   asp-route-id="@Model.Company.Id" class="badge badge-primary">@Model.Company.Value</a>
                <h6 class="card-subtitle mt-2 mb-2">Directors</h6>
                @foreach (var director in Model.Directors)
                {
                    <p><a asp-controller="Directors" asp-action="Movies" class="badge badge-primary">@director.Value</a></p>
                }
                <h6 class="card-subtitle mb-2">Actors</h6>
                @foreach (var actor in Model.Actors)
                {
                    <span><a asp-controller="Actors" asp-action="Movies" class="badge badge-success">@actor.Value</a></span>
                }
            <p class="text-center m-2">
                <a asp-controller="Movies" asp-action="Index"
                   class="btn btn-primary">Back</a>
            </p>
            </div>
        </div>
    </div>
</div>